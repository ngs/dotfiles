" =================================================
" Prettier
" =================================================

let g:prettier#autoformat = 0
if v:version < 800
  autocmd BufWritePre *.js,*.jsx,*.mjs,*.ts,*.tsx,*.css,*.less,*.scss,*.json,*.graphql,**.vue Prettier
else
  autocmd BufWritePre *.js,*.jsx,*.mjs,*.ts,*.tsx,*.css,*.less,*.scss,*.json,*.graphql,**.vue PrettierAsync
endif
